@model LogbookWood.Web.ViewModels.Tickets.ListDispatchViewModel
@inject LogbookWood.Services.Data.Models.ITicketService ticketService
@using LogbookWood.Data.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    this.ViewData["Title"] = "Експедиция";
    ;}
<h2>Превозни билети: Експедиция</h2>
<div class=" col-xs-3 text-left">
    <a class="btn btn-success" href="/Tickets/CreateDispatch">Създай нов</a>
</div>
<br />
<th></th>
<div class="table-responsive">
    <table class="table table-hover text-centered">
        <thead class="thead-dark">
            <tr class="text-dark">
                <th scope="col">Номер</th>
                <th scope="col">Дата</th>
                <th scope="col">Получател</th>
                <th scope="col">Изпращач</th>
                <th scope="col">Коментар</th>
            </tr>
        </thead>
        @foreach (var itemOut in this.Model.Tickets)
        {
            <tbody>
                <tr>
                    <td>@itemOut.NumberTicket</td>
                    <td>@itemOut.Date</td>
                    <td>@itemOut.ClientDescription</td>
                    <td>@ticketService.GetUserCompanyName(UserManager.GetUserId(User))</td>
                    <td>@itemOut.Comment</td>
                </tr>
            </tbody>
        }

    </table>


    <hr />
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
